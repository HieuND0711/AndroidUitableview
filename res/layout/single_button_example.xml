<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ui="http://schemas.android.com/apk/res/com.android.androiduitableview.activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffd3d3d3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.android.androiduitableview.library.widget.UIButton
                android:id="@+id/myButton1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dip"
                ui:title="some title one" />

            <com.android.androiduitableview.library.widget.UIButton
                android:id="@+id/myButton2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dip"
                ui:subtitle="some subtitle two"
                ui:title="some title two" />

            <com.android.androiduitableview.library.widget.UIButton
                android:id="@+id/myButton3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dip"
                ui:image="@drawable/search_image"
                ui:subtitle="with image"
                ui:title="some title three" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>